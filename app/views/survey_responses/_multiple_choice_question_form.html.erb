
<% question = f.object.question %>
<%= question.body %>


<% if question.max_answers > 1 %>
  <% question.possible_answers.each do |answer| %>
    <br>
    <%= f.check_box :answers %>
    <%= f.label :answers, answer.body %>
  <% end %>
  <br>
  <br>
<% else %>

  <% question.possible_answers.each do |answer| %>
    <br>
    <%= f.radio_button :answers, answer.id %>
    <%= f.label :answers, answer.body %>
  <% end %>
  <br>
  <br>
<% end %>
