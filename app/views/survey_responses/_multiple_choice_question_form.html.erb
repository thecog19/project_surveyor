
<% question = f.object.question %>
<%= question.body %>


<% if question.max_answers > 1 %>
  <br>
  <%= f.collection_check_boxes :answer_ids, question.possible_answers, :id, :body %>
  <br>
  <br>
<% else %>
  <br>
  <%= f.collection_radio_buttons :answer_ids, question.possible_answers, :id, :body  %>
  <br>
  <br>
<% end %>
