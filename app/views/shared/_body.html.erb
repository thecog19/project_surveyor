
<%= form_for @survey do |survey_builder| %>
  <%= survey_builder.label :name %>
  <%= survey_builder.text_field :name %><br>
  

  <%= survey_builder.fields_for :questions, @questions do |question_field| %>
     <%= question_field.collection_select :type_id, Type.all, :id, :description, include_blank: "Question Type"%>
    
  <% end %>

  <%= survey_builder.submit %>
<% end %>

