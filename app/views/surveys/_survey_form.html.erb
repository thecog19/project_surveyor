
<%= form_for @survey do |survey_builder| %>
  <%= survey_builder.label :name %>
  <br>
  <%= survey_builder.text_field :name, size: 30 %><br>

  <%= survey_builder.label :description %>
  <br>
  <%= survey_builder.text_area :description, cols: 70, rows: 4 %><br>

  <%= survey_builder.submit %>
<% end %>
