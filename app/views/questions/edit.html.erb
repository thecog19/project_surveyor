
<div class="row">
  <div class="col-md-4"><h2>Update Question</h2></div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= form_for @question, url: { action: :update } do |question_fields| %>
      <%= question_fields.label :body %>
      <br>
      <%= question_fields.text_field :body %>
      <br>
      <br>
      <%= question_fields.check_box :required %>
      <%= question_fields.label :required %>
      <br>
      <br>
      <%= question_fields.label :max_answers, "Number of accepted answers" %>
      <br>
      <%= question_fields.number_field :max_answers, min: 1, max: @question.possible_answers_count %>
      <br>
      <br>
        <%= question_fields.fields_for :possible_answers do |pa_fields|%>

          <%=pa_fields.label :body, "Answer Text" %>
          <br>
          <%= pa_fields.text_field :body, size: 65%>
          <br> <br>
          
        <% end %>
      <br>
      <%= question_fields.submit "Update Question" %>
    <% end %>
  </div>
</div>
