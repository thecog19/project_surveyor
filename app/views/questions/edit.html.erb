
<div class="row">
  <div class="col-md-4"><h2>Update Question</h2></div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= form_for @question, url: { action: :update } do |f| %>
      <%= f.label :body %>
      <%= f.text_field :body %>
      <br> <br> <br>
      <% @question.possible_answers.each do |option| %>

        <%= fields_for option do |option_field|%>
          <%= option_field.label :body, "Option Type" %>
          <%= option_field.text_field :body %>
          <br> <br>

        <% end %>
      <% end %>
      <%= f.submit "Create Options" %>
    <% end %>
  </div>
</div>
