
<div class="row">
  <div class="col-md-4"><h2>Update Question</h2></div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= form_for @question, url: { action: :update } do |f| %>
      <%= f.label :body %>
      <br>
      <%= f.text_field :body %>
      <br>
      <br>
      <%= f.check_box :required %>
      <%= f.label :required %>
      <br>
      <br>
      <%= f.label :max_answers, "Number of accepted answers" %>
      <br>
      <%= f.number_field :max_answers, min: 1, max: @question.possible_answers_count %>
      <br>
      <br>
      <% @question.possible_answers.each do |option| %>
        <%= fields_for option do |option_field|%>
          <%= option_field.label :body, "Answer Text" %>
          <br>
          <%= option_field.text_field :body, size: 65%>
          <br> <br>
        <% end %>
      <% end %>
      <br>
      <%= f.submit "Update Question" %>
    <% end %>
  </div>
</div>
