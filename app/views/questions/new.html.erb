
<div class="row">
  <div class="col-md-4"><h2>New Question</h2></div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= form_for @question, url: { action: :create } do |f| %>
      <%= f.label :question_type_id %>
      <br>
      <%= f.collection_select :question_type_id, QuestionType.all, :id, :description, include_blank: true %>
      <br>
      <br>
      <%= f.check_box :required %>
      <%= f.label :required %>
      <br>
      <br>
      <%= label_tag :options, "How many options?" %>
      <br>
      <%= number_field_tag :options %>
      <br>
      <br>
      <%= f.label :body %>
      <br>
      <%= f.text_area :body, cols: 70, rows: 2 %>
      <br>
      <br>
      <%= f.submit "Continue Creating Question" %>
    <% end %>
  </div>
</div>
